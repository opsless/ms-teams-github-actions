  "author": "opsless.io team",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "adaptive-expressions": "^4.12.0",
    "adaptivecards-templating": "^2.1.0",
    "axios": "^0.21.1",
    "cockatiel": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.25",
    "@typescript-eslint/parser": "^3.7.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.5.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^24.9.0",
    "jest-circus": "^26.1.0",
    "js-yaml": "^3.14.0",
    "prettier": "2.0.5",
    "ts-jest": "^24.3.0",
    "typescript": "^3.9.7"
  }
